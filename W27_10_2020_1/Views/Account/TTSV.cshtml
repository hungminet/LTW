
@{
    ViewBag.Title = "TTSV";
    W27_10_2020_1.Models.SINHVIEN sv = ViewBag.SinhVien;
    bool loginstatus = ViewBag.loginstatus;
}
@{

}

@{
    if (loginstatus)
    {
        <h2 class=" page-header">THÔNG TIN SINH VIÊN</h2>

        <div class="panel-info">
            <img class="img-circle" src="./" alt="Student image">
            <p class="list-group-item">Full name: <span>@sv.HoTen</span></p>
            <p class="list-group-item">Student ID: <span>@sv.MaSV</span></p>
            <p class="list-group-item">Birthday: <span>@sv.NgaySinh</span></p>
            <p class="list-group-item">Class: <span>@sv.Lop</span></p>
            <p class="list-group-item">Email: <span>@sv.Email</span></p>
            <p></p>
            <button class="glyphicon glyphicon-edit"> <a href="/Account/EditInfo">Edit</a></button>
            <p></p>
            <button class="glyphicon glyphicon-erase"> Delete</button>
        </div>
    }
    else
    {   
        <h3 class=" text-uppercase">Đăng nhập để xem thông tin sinh viên</h3>
        <button class="glyphicon glyphicon-log-in"> <a href="/Account/Login">Login</a></button>
    }
}
